<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Ekhaya Smart Scholars | Forgot Password</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
</head>

<body class="font-sans">

     <!-- Navigation -->
     <nav style="background:#000026;" class="text-white shadow-lg z-50 sticky top-0">
        <div class="flex items-center justify-between px-4 py-4 shadow-lg">
          <!-- Logo -->
          <a href="/login" class="flex items-center">
           <img 
            src="/images/logo2.png" 
            alt="Ekhaya Smart Scholars Logo" 
            class="h-10 w-24 sm:h-12 sm:w-32 md:h-15 md:w-40 object-contain"
             >
          </a>
          <!-- Mobile Menu Toggle -->
          <div class="lg:hidden">
            <button class="menu-icon text-white focus:outline-none">
              <i class="fas fa-bars text-xl"></i>
            </button>
          </div>
      
          <!-- Desktop Nav Links -->
          <ul class="hidden lg:flex items-center space-x-4 font-medium text-sm">
            <li><a href="/" class="hover:text-gray-400 transition duration-200">HOME</a></li>
            <li><a href="/" class="hover:text-gray-400 transition duration-200">COURSES</a></li>
            <li><a href="/" class="hover:text-gray-400 transition duration-200">ABOUT</a></li>
            <li><a href="/" class="hover:text-gray-400 transition duration-200">CONTACT US</a></li>
            <li>
              <a href="/login" class="text-white hover:text-gray-400 font-semibold transition duration-200">
                LOGIN
              </a>
            </li>
            <li>
              <a 
                href="/register" 
                class="inline-block px-3 hover:bg-black hover:text-white py-1 border-2 border-white text-white rounded-lg hover:bg-grtext-gray-400 hover:text-white transition duration-300 text-sm font-bold"
              >
                APPLY NOW
              </a>
            </li>
          </ul>
        </div>
      
        <!-- Mobile Menu -->
        <ul style="background:#000026;" class="mobile-menu lg:hidden hidden text-white px-4 py-2 text-sm font-medium">
          <li><a href="/" class="block py-2 hover:text-gray-400 transition duration-200">HOME</a></li>
          <li><a href="/" class="block py-2 hover:text-gray-400 transition duration-200">COURSES</a></li>
          <li><a href="/" class="block py-2 hover:text-gray-400 transition duration-200">ABOUT</a></li>
          <li><a href="/" class="block py-2 hover:text-gray-400 transition duration-200">CONTACT US</a></li>
          <li><a href="/login" class="block py-2 text-gray-400 hover:text-white transition duration-200">LOGIN</a></li>
          <li>
            <a 
              href="/register" 
              class=" inline-block w-full hover:bg-black hover:text-white text-center px-3 py-2 mt-1 border-2 border-grtext-gray-400 text-gray-400 rounded hover:bg-grtext-gray-400 hover:text-white transition duration-300"
            >
              APPLY NOW
            </a>
          </li>
        </ul>
      </nav>

  <!-- Main Section -->
  <main class="flex flex-col lg:flex-row items-center justify-center min-h-screen px-6 lg:px-20 py-16">
    <!-- Form Section -->
    <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-md">
      <h2 class="text-3xl font-bold text-center text-gray-800 mb-2">Reset Your Password</h2>
      <p class="text-sm text-gray-600 mb-6 text-center">We'll send you a reset code via email.</p>

<form method="POST" action="<%= stage === 1 ? '/forgot-password' : stage === 2 ? '/verify-code' : '/reset-password' %>">

  <!-- Stage 1: Email -->
  <% if (stage === 1) { %>
    <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
    <input type="email" name="email" value="<%= email %>" required
      class="w-full px-4 py-2 border border-gray-300 rounded-md mb-4 focus:outline-none focus:border-black">
  <% } %>

  <!-- Stage 2: Verification Code -->
  <% if (stage === 2) { %>
    <input type="hidden" name="email" value="<%= email %>">
    <label for="code" class="block text-sm font-medium text-gray-700 mb-1">Verification Code</label>
    <input type="text" name="code" required
      class="w-full px-4 py-2 border border-gray-300 rounded-md mb-4 focus:outline-none focus:border-black">
  <% } %>

  <!-- Stage 3: New Password -->
  <% if (stage === 3) { %>
    <input type="hidden" name="email" value="<%= email %>">
    <input type="hidden" name="code" value="<%= code %>">

    <label for="newPassword" class="block text-sm font-medium text-gray-700 mb-1">New Password</label>
    <input type="password" name="newPassword" required
      class="w-full px-4 py-2 border border-gray-300 rounded-md mb-4 focus:outline-none focus:border-black">

    <label for="confirmPassword" class="block text-sm font-medium text-gray-700 mb-1">Confirm Password</label>
    <input type="password" name="confirmPassword" required
      class="w-full px-4 py-2 border border-gray-300 rounded-md mb-4 focus:outline-none focus:border-black">
  <% } %>

  <% if (message) { %>
    <p class="text-center text-sm text-red-500 mt-2 mb-4"><%= message %></p>
  <% } %>

  <button type="submit" style="background:#000026;"
    class="w-full py-2 text-white rounded-md hover:bg-gray-800 transition duration-300">
    <%= stage === 1 ? 'Send Code' : stage === 2 ? 'Verify Code' : 'Reset Password' %>
  </button>
</form>

    </div>

    <!-- Visual/Content Section -->
    <div class="mt-12 lg:mt-0 lg:ml-16 max-w-xl text-center lg:text-left">
      <img src="/images/loginLogo.png" alt="Reset Password Graphic" class="rounded w-100 h-62 mt-12 object-cover" />
      <div class="mt-8 p-4 border-l-4 border-gray-400 bg-gray-50 rounded">
        <p class="text-sm text-gray-800 italic">"Regaining access is easy. Just follow the secure reset steps and you're back on track!"</p>
        <p class="mt-2 font-bold text-sm text-gray-700">â€” Ekhaya Support Team</p>
      </div>
    </div>
  </main>
  <script>
    document.querySelector('.menu-icon').addEventListener('click', () => {
        document.querySelector('.mobile-menu').classList.toggle('hidden');
    });
</script>

</html>