  <!-- Main Section -->
  <main class="flex flex-col lg:flex-row items-center justify-center min-h-screen px-6 lg:px-20 py-16">
    <!-- Form Section -->
    <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-md">
      <h2 class="text-3xl font-bold text-center text-gray-800 mb-2">Reset Your Password</h2>
      <p class="text-sm text-gray-600 mb-6 text-center">We'll send you a reset code via email.</p>

      <form id="resetForm" method="POST" action="/forgot-password">

        <!-- Email -->
        <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
        <input type="email" id="email" name="email" required
          class="w-full px-4 py-2 border border-gray-300 rounded-md mb-4 focus:outline-none focus:border-black">

        <!-- Verification Code -->
        <div id="codeSection" class="hidden">
          <label for="code" class="block text-sm font-medium text-gray-700 mb-1">Verification Code</label>
          <input type="text" id="code" name="code" required
            class="w-full px-4 py-2 border border-gray-300 rounded-md mb-4 focus:outline-none focus:border-black">
        </div>

        <!-- New Password -->
        <div id="newPasswordSection" class="hidden">
          <label for="newPassword" class="block text-sm font-medium text-gray-700 mb-1">New Password</label>
          <input type="password" id="newPassword" name="newPassword" required
            class="w-full px-4 py-2 border border-gray-300 rounded-md mb-4 focus:outline-none focus:border-black">

          <label for="confirmPassword" class="block text-sm font-medium text-gray-700 mb-1">Confirm Password</label>
          <input type="password" id="confirmPassword" name="confirmPassword" required
            class="w-full px-4 py-2 border border-gray-300 rounded-md mb-4 focus:outline-none focus:border-black">
        </div>

        <!-- Dynamic Message -->
        <p id="responseMsg" class="text-center text-sm text-red-500 mt-2 mb-4"></p>

        <button type="submit" id="submitBtn" style="background:#000026;" 
          class="w-full py-2 text-white rounded-md hover:bg-gray-800 transition duration-300">
          Submit
        </button>
      </form>
    </div>

    <!-- Visual/Content Section -->
    <div class="mt-12 lg:mt-0 lg:ml-16 max-w-xl text-center lg:text-left">
      <img src="/images/loginLogo.png" alt="Reset Password Graphic" class="rounded w-100 h-62 mt-12 object-cover" />
      <div class="mt-8 p-4 border-l-4 border-gray-400 bg-gray-50 rounded">
        <p class="text-sm text-gray-800 italic">"Regaining access is easy. Just follow the secure reset steps and you're back on track!"</p>
        <p class="mt-2 font-bold text-sm text-gray-700">â€” Ekhaya Support Team</p>
      </div>
    </div>
  </main>
  <script>
    document.querySelector('.menu-icon').addEventListener('click', () => {
        document.querySelector('.mobile-menu').classList.toggle('hidden');
    });
</script>
<script>
    const form = document.getElementById('resetForm');
    const codeSection = document.getElementById('codeSection');
    const newPasswordSection = document.getElementById('newPasswordSection');
    const responseMsg = document.getElementById('responseMsg');
    const submitBtn = document.getElementById('submitBtn');
  
    let stage = 1; // Stage 1 = Send OTP, 2 = Verify Code, 3 = Reset Password
  
    form.addEventListener('submit', async function (e) {
      e.preventDefault();
  
      const email = document.getElementById("email").value;
      const code = document.getElementById("code").value;
      const newPassword = document.getElementById("newPassword").value;
      const confirmPassword = document.getElementById("confirmPassword").value;
  
      // Email validation
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
  
      if (stage === 1) {
        if (!emailRegex.test(email)) {
          responseMsg.textContent = "Please enter a valid email.";
          responseMsg.classList.add('text-red-500');
          return;
        }
  
        try {
          const res = await fetch("/forgot-password", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ email })
          });
  
          const data = await res.json();
          if (res.ok) {
            responseMsg.textContent = "ðŸ“© Verification code sent to your email.";
            responseMsg.classList.remove('text-red-500');
            responseMsg.classList.add('text-green-600');
            codeSection.classList.remove("hidden");
            stage = 2;
          } else {
            responseMsg.textContent = data.error || "Failed to send code.";
          }
        } catch (err) {
          responseMsg.textContent = "Server error. Please try again.";
        }
      }
  
      else if (stage === 2) {
        if (!code) {
          responseMsg.textContent = "Please enter the verification code.";
          return;
        }
  
        try {
          const res = await fetch("/verify-code", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ email, code })
          });
  
          const data = await res.json();
          if (res.ok) {
            responseMsg.textContent = "âœ… Code verified. Please enter a new password.";
            responseMsg.classList.remove('text-red-500');
            responseMsg.classList.add('text-green-600');
            newPasswordSection.classList.remove("hidden");
            stage = 3;
          } else {
            responseMsg.textContent = data.error || "Invalid or expired code.";
          }
        } catch (err) {
          responseMsg.textContent = "Server error. Try again.";
        }
      }
  
      else if (stage === 3) {
        if (newPassword !== confirmPassword) {
          responseMsg.textContent = "Passwords do not match.";
          return;
        }
  
        try {
          const res = await fetch("/reset-password", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ email, code, newPassword, confirmPassword })
          });
  
          const data = await res.json();
          if (res.ok) {
            responseMsg.textContent = "âœ… Password reset successfully. You can now log in.";
            responseMsg.classList.remove('text-red-500');
            responseMsg.classList.add('text-green-600');
          } else {
            responseMsg.textContent = data.error || "Password reset failed.";
          }
        } catch (err) {
          responseMsg.textContent = "Server error. Try again.";
        }
      }
    });
  </script>  
