 <script>
      //sending the email of a subscriber
    const form = document.getElementById('subscribeForm');

    form.addEventListener('submit', async (e) => {
        e.preventDefault();

        const email = document.getElementById('email').value;

        try {
            const res = await fetch('/subscribe', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ email })
            });

            const data = await res.json();

            alert(data.message); // Shows success or error message
        } catch (err) {
            alert('Something went wrong. Please try again later.');
            console.error(err);
        }
    });

  </script>
<script>
  const slides = [
    {
      img: "https://th.bing.com/th/id/R.4204bff964513401ae5252e412d3b221?rik=KKug5IqF0UtCRQ&riu=http%3a%2f%2fhoranshealth.ie%2fcdn%2fshop%2farticles%2fback-school-children-are-happy-smiling-return-school-with-their-friends.jpg%3fv%3d1723122749&ehk=5uET1iaWR2OgpZFcn3a%2bYApgGEMS3KItwR3raP6i4mc%3d&risl=&pid=ImgRaw&r=0",
