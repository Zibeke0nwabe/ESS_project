<script>
  const slides = [
    {
      img: "https://th.bing.com/th/id/R.4204bff964513401ae5252e412d3b221?rik=KKug5IqF0UtCRQ&riu=http%3a%2f%2fhoranshealth.ie%2fcdn%2fshop%2farticles%2fback-school-children-are-happy-smiling-return-school-with-their-friends.jpg%3fv%3d1723122749&ehk=5uET1iaWR2OgpZFcn3a%2bYApgGEMS3KItwR3raP6i4mc%3d&risl=&pid=ImgRaw&r=0",
      title: "Learn From Anywhere",
      desc: "Access high-quality educational content wherever you are, whenever you need it."
    },
    {
      img: "https://img.freepik.com/premium-photo/elementaryage-children-friends-school-classroom-back-school-concept-summer-course-concept_1039005-3065.jpg",
      title: "Interactive Virtual Classes",
      desc: "Engage in live discussions, quizzes, and group activities to deepen understanding."
    },
    {
      img: "https://th.bing.com/th/id/OIP.gT9wIbVmPsPkuFgsSSAW0QHaEO?rs=1&pid=ImgDetMain&cb=idpwebp2&o=7&rm=3",
      title: "Track Your Progress",
      desc: "View your learning stats, complete modules, and earn achievements as you grow."
    }
  ];

  let slideIndex = 0;
  const imageEl = document.getElementById('carousel-image');
  const titleEl = document.getElementById('carousel-title');
  const descEl = document.getElementById('carousel-desc');

  function showSlide(index) {
    imageEl.classList.remove('animate-fadeIn');
    void imageEl.offsetWidth; // force reflow to restart animation

    imageEl.src = slides[index].img;
    imageEl.classList.add('opacity-100', 'animate-fadeIn');
    titleEl.textContent = slides[index].title;
    descEl.textContent = slides[index].desc;
  }

  function nextSlide() {
    slideIndex = (slideIndex + 1) % slides.length;
    showSlide(slideIndex);
  }

  function prevSlide() {
    slideIndex = (slideIndex - 1 + slides.length) % slides.length;
    showSlide(slideIndex);
  }

  showSlide(slideIndex);
  setInterval(nextSlide, 8000);
</script>



